/* GENERAL STYLES */
* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    font-size: 62.5%;
    font-family: 'Roboto', sans-serif;
    cursor: default;
}

body {
    background-color: #EEE;
}

h1 {
    font-size: 3.906rem;
    font-weight: 700;
    color: #222;
}

h2 {
    font-size: 2.5rem;
    font-weight: 500;
}

.main-header {
    margin-top: 15px;
    margin-bottom: 15px;
}

.secondary-header {
    font-size: 3.1rem;
    color: #333;
}

.container {
    max-width: 1000px;
    margin: 0 auto;
}
/* END OF GENERAL STYLES */

.grid{
    display: grid;
    grid-template-columns: 1fr 1fr;
    column-gap: 2rem;
    row-gap: 4rem;
    color: #fff;
}

.balance-box {
    display: flex;
    align-items: center;
    flex-direction: column;
    background-color: #74c0fc;
    border-radius: 5px;
    padding: 3rem 0 11rem 0rem;
    color: #222;
}

.amount {
    margin-top: 10px;
    border-radius: 5px;
    font-weight: 500;
    font-size: 2rem;
    padding: 2rem 9rem;
    background-color: #fff;
}

.grid:nth-child(2) {
    grid-column: 2;
}
</style>
</head>
<body>
<main class="container">
    <h1 class="main-header">Account Info</h1>
    <div class="container">
        {{#with account}}
            <h2 class="secondary-header">Account: {{id}}</h2>
            <h2 class="secondary-header">Name: {{name}}</h2>
            <h2 class="secondary-header">Currency: {{currency}}</h2>
            <h2 class="secondary-header">Account Type: {{accountType}}</h2>
        {{/with}}
    </div>

    <h1 class="main-header">Transaction Info</h1>
    <div class="grid">
        {{#with transactionInfo}}
        <div class="balance-box"><h2 class="sub-header">Initial Balance</h2> <p class="amount">{{balanceBefore}}</p></div>
        <div class="balance-box"><h2 class="sub-header">Current Balance</h2><p class="amount">{{balanceAfter}}</p></div>
        <div class="balance-box"><h2 class="sub-header">Successful Transactions</h2><p class="amount">{{numTransactions}}</p></div>
        <div class="balance-box"><h2 class="sub-header">Failed Transactions</h2><p class="amount">{{failedTransactions}}</p></div>
        {{/with}}
    </div>

    <h1 class="main-header">Transactions</h1>
    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Deposit Acc.</th>
                    <th>Withdraw Acc.</th>
                    <th>Timestamp</th>
                    <th>Amount</th>
                    <th>Currency</th>
                    <th>Fraudulent</th>
                </tr>
            </thead>
            <tbody>
                {{#transactions}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="accounts/{{depositAccount}}">{{depositAccount}}</a></td>
                    <td><a href="accounts/{{depositAccount}}">{{withdrawAccount}}</a></td>
                    <td>{{timestamp}}</td>
                    <td>{{amount}}</td>
                    <td>{{currency}}</td>
                    <td>{{fraudulent}}</td>
                </tr>
                {{/transactions}}
            </tbody>
        </table>
    </div>
</main>
</body>
</html>
