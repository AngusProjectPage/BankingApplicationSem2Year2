<body>
<nav>
    <ul>
        <li><a href="home" >Home</a></li>
        <li><a href="accounts">Accounts</a></li>
        <li><a href="transactions">Transactions</a></li>
    </ul>

    <div>
        <a href="#">Export</a>
    </div>
</nav>

<main>
    <h2 class="secondary-header">Account: {{TransactionInfo.id}}</h2>
    <div class="container">
        <div><h2 class="sub-header">Initial Balance</h2><p class="amount">{{TransactionInfo.balanceBefore}}</p></div>
        <div><h2 class="sub-header">Current Balance</h2><p class="amount">{{TransactionInfo.balanceAfter}}</p></div>
        <div><h2 class="sub-header">Successful Transactions</h2><p class="amount">{{TransactionInfo.numTransactions}}</p></div>
        <div><h2 class="sub-header">Failed Transactions</h2><p class="amount">{{TransactionInfo.failedTransactions}}</p></div>#
    </div>
</main>
</body>
