/* GENERAL STYLES */
:root {

    --base: #fff;
    --secondary: #f5f7f8;
    --highlight: #1a7b99;

    --primary-color: #a5d8ffp;
    --white: #fff;
    --light-grey: #eee;
    --mid-grey: #333;
    --dark-grey: #222;

    --8px: 8.19px;
    --10px: 10.24px;
    --12px: 12.80px;
    --16px: 16.00px;
    --20px: 20.00px;
    --25px: 25.00px;
    --31px: 31.25px;
    --39px: 39.06px;
    --48px: 76.29px;
    --61px: 61.04px;
    --76px: 48.83px;
}

/* GENERAL STYLES */
* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    font-size: 62.5%;
    font-family: 'Roboto', sans-serif;
    cursor: default;
    background-color: var(--dark-grey);
}

body {
    background-color: var(--dark-grey);
}

h1 {
    font-size: 6rem;
    font-weight: 700;
    color: var(--light-grey);
    text-align: center;
}

h2 {
    margin-top: 1vh;
    font-size: 3.5rem;
    font-weight: 500;
    color: var(--light-grey);
    padding: 0.5em 0px 0.25em 0px;
    text-align: center;
    width: 100%;
}

.main-header {
    margin-top: 15px;
    margin-bottom: 15px;
}

.secondary-header {
    font-size: 4.5rem;

    margin-top: 1em;
    color: var(--light-grey);
}

main {
    max-width: 95vw;
    height: 85vh;
    margin: 0 auto;
}
/* END OF GENERAL STYLES */

.container {
    width: 100%;
    height: 100%;
    background-color: var(--mid-grey);
    align-items: center;
    border-radius: 10px;
}

.container div {
    width: 100%;
    height: 20vh;
    color: var(--dark-grey);
}

.amount {
    overflow: hidden;
    text-align: center;
    font-size: 2.4rem;
    padding: 0.5em 2em 1em 2em;
    border-radius: 5px;
    font-weight: 500;
    width: 95%;
    margin-left:2.5%;
    height: 2.5em;
    background-color: #3a3a3a;
    color: var(--light-grey);
}

        nav {
            border-bottom: 2px solid var(--mid-grey);
        }

        nav ul {
            display: inline-block;
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: var(--dark-grey);
        }

        nav li {
            display: inline-block;
            float: left;
            padding: 0 16px;
            background-color: var(--dark-grey);
            border-right: 2px solid var(--mid-grey);
        }

        nav li:hover {
            background-color: var(--light-grey);
        }

        nav li a {
            display: block;
            color: var(--light-grey);
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: var(--25px);
        }

        nav li a:hover {
            color: var(--dark-grey);
            text-decoration: none;
        }

        nav div {
            display: inline-block;
            float:right;
            margin-right:20px;
            background-color: var(--primary-color);
        }

        nav div:hover {
            background-color: var(--highlight);
        }

        nav div a {
            display: inline-block;
            color: var(--light-grey);
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: var(--25px);
        }

        nav div a:hover {
            display: inline-block;
            color: var(--light-grey);
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: var(--25px);
        }
</style>
